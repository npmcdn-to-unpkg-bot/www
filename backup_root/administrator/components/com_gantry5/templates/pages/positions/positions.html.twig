{% extends ajax-suffix ? "@gantry-admin/partials/ajax.html.twig" : "@gantry-admin/partials/base.html.twig" %}

{% block gantry %}
    <div class="menu-header">
        <span class="float-right">
            <button class="button button-back-to-conf" tabindex="0" aria-label="{{ 'GANTRY5_PLATFORM_BACK_SETUP'|trans }}"><i class="fa fa-fw fa-fw fa-arrow-left"></i> <span>{{ 'GANTRY5_PLATFORM_BACK_SETUP'|trans }}</span></button>
        </span>
        <h2 class="page-title">
            {{ 'GANTRY5_PLATFORM_POSITIONS'|trans }}
            <button data-g-config="create" data-g-config-href="{{ gantry.route('positions', name, 'create')|e }}" title="{{ 'GANTRY5_PLATFORM_ADD_NEW_POSITION'|trans }}" aria-label="{{ 'GANTRY5_PLATFORM_ADD_NEW_POSITION'|trans }}" data-g-config-method="POST" class="button button-primary">
                <i class="fa fa-fw fa-plus"></i>
            </button>
            {# TODO: Adding a new outline should be a two step process: 1. you pick title and Layout, 2. creates it. #}
            {#<a data-g5-lm-add href="{{ gantry.route('picker/layouts')|e }}" class="button button-primary"><i class="fa fa-fw fa-plus"></i></a>#}
        </h2>
    </div>

    <div id="positions">
        <ul class="g-grid">
            {# TODO: Need to inject the Base Outline at the top of the list #}
            {% for name, title in positions %}
                <li class="card g-block size-1-4">
                    {% include '@gantry-admin/layouts/position.html.twig' %}
                </li>
            {% endfor %}
            <li class="card g-block size-1-4 add-new">
                <div class="page">
                    <a data-g-config="create" data-g-config-href="{{ gantry.route('positions', name, 'create')|e }}" title="{{ 'GANTRY5_PLATFORM_ADD_NEW_POSITION'|trans }}" aria-label="{{ 'GANTRY5_PLATFORM_ADD_NEW_POSITION'|trans }}" data-g-config-method="POST" data-g5-lm-add tabindex="0">
                        <i class="fa fa-fw fa-plus"></i>
                    </a>
                </div>
            </li>
        </ul>
    </div>
{% endblock %}
